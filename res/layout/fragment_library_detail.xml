<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:odoo="http://schemas.android.com/apk/res/com.odoo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingTop="?android:attr/actionBarSize" >

    <odoo.controls.OForm
        android:id="@+id/odooFormBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        odoo:model="book.book" >

        <odoo.controls.OManyToOneWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            odoo:column_name="name"
            odoo:model_name="book.book" >
        </odoo.controls.OManyToOneWidget>

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="name"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="language"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="student_id"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall" />

        <odoo.controls.OField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:field_name="description"
            odoo:field_textAppearance="?android:attr/textAppearanceMedium"
            odoo:label_color="@color/odoo_purple"
            odoo:label_textAppearance="?android:attr/textAppearanceSmall" />
    </odoo.controls.OForm>

</ScrollView>