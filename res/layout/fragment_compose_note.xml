<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fillViewport="true"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <com.openerp.util.controls.OEEditText
            android:id="@+id/edtNoteTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#f5f5f5"
            android:hint="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#414141"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="3" >

            <com.openerp.util.tags.TagsView
                android:id="@+id/txv_composeNote_Tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="3"
                android:background="#f5f5f5"
                android:hint="Tags"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:id="@+id/imgBtnAddTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oe_listview_background_selector"
                android:contentDescription="@string/imgview_note_add_tags"
                android:onClick="addTags"
                android:src="@drawable/ic_action_content_new" />
        </LinearLayout>

        <com.openerp.util.controls.OEEditText
            android:id="@+id/edtNoteComposeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#f5f5f5"
            android:hint="@string/compose_note_description" />

        <WebView
            android:id="@+id/txv_composeNote_Description_Pad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>